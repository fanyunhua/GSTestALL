<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.FeedBackActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#49A4D6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="意见反馈"
            android:textSize="50sp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/feed_back"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@mipmap/back"/>

        <TextView
            android:id="@+id/feed_my"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的意见"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/feed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="50dp"
        android:hint="标题"
        android:background="@drawable/et_bg111"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/feed_content"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="150dp"
        android:hint="输入您的意见"
        android:background="@drawable/et_bg111"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="8"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/feed_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="手机号码"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:background="@drawable/et_bg111"
        android:maxLength="11"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/feed_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="300dp"
        android:textSize="30sp"
        android:text="提交" />


</LinearLayout>