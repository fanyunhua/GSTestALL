<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0cf"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back_63buycar"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="1100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="购物车"
            android:textColor="#fff"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_gl63car"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="管理"
            android:textColor="#000"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="#0cf"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:text="使用日期" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="400dp"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#bbb"
            android:text="今天06/02预订" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:textSize="30sp"
            android:textColor="#000"
            android:gravity="center"
            android:text="明天06/03预订" />

        <TextView
            android:id="@+id/tv_date63car"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="更多日期 >"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:textSize="45sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:paddingLeft="100dp"
            android:gravity="center|bottom"
            android:text="产品名称" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textSize="45sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center|bottom"
            android:text="简介" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textSize="45sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="right|bottom"
            android:text="数量" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textSize="45sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center|bottom"
            android:text="价格" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_63car"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:background="#fff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/but_del_63car"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:text="删除"
            android:textColor="#f00"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_63car"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="20dp" />

            <TextView
                android:id="@+id/tv_name_63car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:textSize="30sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_infor_63car"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/lin63"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but1_63car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#fff"
                android:text="一"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_num_63car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textSize="30sp" />

            <Button
                android:id="@+id/but2_63car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#fff"
                android:text="十"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_money_63car"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sum_63car"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/but_pay_63car"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginLeft="300dp"
            android:background="#0f0"
            android:text="立即支付"
            android:textColor="#fff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/but_qk_63car"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:background="#fff"
            android:text="清空购物车"
            android:textColor="#000"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>
