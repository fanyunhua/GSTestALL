<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">


            <TextView
                android:id="@+id/item_feed_title"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/feed_title"
                android:textSize="25sp"
                android:gravity="center"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/item_feed_state"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/feed_state"
                android:textSize="25sp"
                android:gravity="center"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/item_feed_hfContent"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/feed_hfContent"
                android:textSize="25sp"
                android:padding="8dp"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >


            <TextView
                android:id="@+id/item_feed_submitTime"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/feed_submitTime"
                android:textSize="25sp"
                android:padding="8dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_feed_hfTime"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="8dp"
                android:text="@string/feed_hfTime"
                android:textSize="25sp"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"/>

</LinearLayout>
