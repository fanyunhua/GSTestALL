<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.fyh.ParkingLotActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#49A4D6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="停车场"
            android:textSize="50sp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/mParkingBackImage"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@mipmap/back"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mParkingImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/car4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="大学城停车场"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mParkingMontyTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="收费标准：5元/小时"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mParkingTVCarCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="剩余车位：2/10"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mParkingBtnQuery"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:padding="20dp"
                android:text="刷新"
                android:background="@drawable/btn_bg_praking"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout >