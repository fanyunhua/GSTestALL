<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.StationSelectActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#49A4D6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="定制班车"
            android:textSize="50sp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/ss_back"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@mipmap/back"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="光谷金融街 --- 南湖大厦"
        android:gravity="center"
        android:textSize="30sp"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/ss_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="乘客姓名"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/ss_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="手机号码"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上车地点："
        android:layout_marginLeft="150dp"
        android:textSize="30sp"/>
    <Spinner
        android:id="@+id/ss_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/station"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下车地点："
        android:layout_marginLeft="150dp"
        android:textSize="30sp"/>
    <Spinner
        android:id="@+id/ss_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/station"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/ss_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textSize="35sp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"/>


</LinearLayout>