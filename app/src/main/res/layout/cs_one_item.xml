<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="1号线"
        android:background="@drawable/et_bg111"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_margin="15dp"/>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >


            <TextView
                android:id="@+id/co_way"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="起点-终点"
                android:textSize="30sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/co_time1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:drawableLeft="@mipmap/time"
                android:textSize="30sp"
                android:gravity="center"
                android:text="时间-时间" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">


            <TextView
                android:id="@+id/co_money"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2.7"
                android:text="@string/cs_money"
                android:textSize="30sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/co_mileage"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/cs_mileage"

                android:textSize="30sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/co_time2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:drawableLeft="@mipmap/time"
                android:textSize="30sp"
                android:gravity="center"
                android:text="时间-时间" />
        </TableRow>

    </TableLayout>


</LinearLayout>
